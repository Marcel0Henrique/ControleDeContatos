@model List<ContatoModel>
@{
    ViewData["Title"] = "Listagem de Contatos";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-10">
            <h1 class="display-6">Listagem de Contatos</h1>
        </div>
        <div class="col-2 ">
            <a role="button" class="btn btn-success text-center justify-content-center" asp-controller="Contato"
                asp-action="Criar">Novo
                Contato
            </a>
        </div>
    </div>
</div>



<div class="container">
    <div class="text-center">
        <table class="table">
            <thead class="bg-dark text-white">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col">E-mail</th>
                    <th scope="col">Celular</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="table-secondary">
                @if (Model != null && Model.Any())
                {
                    foreach (var contato in Model)
                    {
                        <tr>
                            <th scope="row">@contato.Id</th>
                            <td>@contato.Nome</td>
                            <td>@contato.Email</td>
                            <td>@contato.Celular</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a role="button" class="btn btn-outline-primary" asp-route-id="@contato.Id" asp-controller="Contato"
                                asp-action="Editar">Editar</a>
                                    <a role="button" class="btn btn-outline-danger" asp-route-id="@contato.Id" asp-controller="Contato"
                                asp-action="ApagarConfirmacao">Excluir</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</div>
